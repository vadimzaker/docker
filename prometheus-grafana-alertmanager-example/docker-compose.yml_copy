      - '--web.listen-address=:9104'

  statsd-exporter-qa:
    image: prom/statsd-exporter:v0.18.0
    ports:
      - 9105:9105
      - 9128:9125/udp
    volumes:
      - ./statsd-exporter-qa/statsd_mapping.yml:/tmp/statsd_mapping.yml
    command:
      - '--statsd.mapping-config=/tmp/statsd_mapping.yml'
      - '--web.listen-address=:9105'

  aws-exporter:
