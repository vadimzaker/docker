      - 9103:9103
      - 9126:9125/udp
    volumes:
      - ./statsd-exporter-prod/statsd_mapping.yml:/tmp/statsd_mapping.yml
    command:
      - '--statsd.mapping-config=/tmp/statsd_mapping.yml'
      - '--web.listen-address=:9103'

  statsd-exporter-dev:
