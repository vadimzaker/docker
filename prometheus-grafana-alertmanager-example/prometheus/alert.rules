- name: low_root_disk_space
  rules: 
  - alert: NodeLowRootDiskWarningTest
    expr: ((node_filesystem_size_bytes{mountpoint="/"} - node_filesystem_free_bytes{mountpoint="/"} ) / node_filesystem_size_bytes{mountpoint="/"} * 100) > 85
    for: 1m
    labels:
      severity: warning
    annotations:
      summary: 'Low root disk space'
      description: '{{ $labels.ansible_name }}: Data disk usage is above 85%. Current value is {{ $value | humanize }}%.'

  - alert: NodeLowRootDiskCriticalTest
    expr: ((node_filesystem_size_bytes{mountpoint="/"} - node_filesystem_free_bytes{mountpoint="/"} ) / node_filesystem_size_bytes{mountpoint="/"} * 100) > 95
    for: 1m
    labels:
      severity: critical
    annotations:
      summary: 'Low root disk space'
      description: '{{$labels.ansible_name}}: Data disk usage is above 95%. Current value is {{ $value | humanize }}%.'
